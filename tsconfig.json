{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "noUnusedLocals": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "./types/**/*", "./node_modules/@types/**/*", "./node_modules/material-ui/**/*"],
  "exclude": ["./node_modules/**/*"],
  "rules": {
    "no-submodule-imports": false
  }
}
