{
  "name": "satoshipay-stellar-wallet",
  "version": "0.3.0",
  "description": "SatoshiPay wallet for the Stellar payment network.",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "SatoshiPay Ltd",
    "email": "feedback@satoshipay.io"
  },
  "repository": "github:satoshipay/wallet",
  "main": "./electron/lib/app.js",
  "scripts": {
    "precommit": "lint-staged",
    "lint:fix": "tslint --fix '{src,stories}/**/*.{ts,tsx}'",
    "prettier": "prettier --write '{src,stories}/**/*.{ts,tsx}' *.md electron/*.js",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "tslint --project .",
    "prebuild:electron": "NODE_ENV=production parcel build ./src/index.html --public-url=./ --detailed-report --target=electron --no-source-maps",
    "build:linux": "PLATFORM=linux npm run prebuild:electron && build --linux --x64 --config ./electron-build.yml",
    "build:mac": "PLATFORM=darwin npm run prebuild:electron && build --mac --x64 --config ./electron-build.yml",
    "build:win": "PLATFORM=win32 npm run prebuild:electron && build --win --ia32  --config ./electron-build.yml",
    "dev": "run-p dev:bundle dev:app:delayed",
    "dev:app": "NODE_ENV=development electron -r ./electron/development .",
    "dev:app:delayed": "sleep 2 && run-s dev:app",
    "dev:bundle": "NODE_ENV=development parcel watch ./src/index.html --public-url=./ --target=electron"
  },
  "lint-staged": {
    "ignore": [
      "**/*.yml"
    ],
    "linters": {
      "*": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@storybook/addon-centered": "^3.4.8",
    "@storybook/react": "^3.3.14",
    "@types/big.js": "^4.0.5",
    "@types/history": "^4.6.2",
    "@types/parcel-env": "0.0.0",
    "@types/qrcode.react": "^0.8.1",
    "@types/react": "~16.3.17",
    "@types/react-dom": "~16.0.6",
    "@types/react-icons": "^2.2.5",
    "@types/react-qr-reader": "^2.1.1",
    "@types/react-router": "^4.0.26",
    "@types/react-router-dom": "^4.2.7",
    "@types/recompose": "^0.26.1",
    "@types/stellar-sdk": "^0.8.6",
    "@types/storybook__react": "^3.0.7",
    "awesome-typescript-loader": "~3.5.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-reload": "^1.2.5",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "~1.8.1",
    "parcel-plugin-typescript": "~0.7.1",
    "prettier": "^1.13.7",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "~2.8.4"
  },
  "dependencies": {
    "@material-ui/core": "^1.2.1",
    "@material-ui/icons": "^2.0.0",
    "big.js": "^5.0.3",
    "electron-debug": "^2.0.0",
    "electron-is-dev": "^0.3.0",
    "electron-store": "^2.0.0",
    "history": "^4.7.2",
    "key-store": "^1.0.0",
    "mobx": "^3.4.1",
    "mobx-react": "^4.3.5",
    "qrcode.react": "^0.8.0",
    "react": "~16.4.1",
    "react-dom": "~16.4.1",
    "react-human-time": "^1.1.0",
    "react-icons": "^2.2.7",
    "react-promise": "^2.0.1",
    "react-qr-reader": "^2.1.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.2.2",
    "recompose": "^0.26.0",
    "stellar-sdk": "^0.10.1"
  }
}
